# GPR AVM ETL Configuration
# Copy to .env and fill in values

# =============================================================================
# TRESTLE MLS API
# =============================================================================
TRESTLE_CLIENT_ID=your_client_id
TRESTLE_CLIENT_SECRET=your_client_secret
TRESTLE_TOKEN_URL=https://api.cotality.com/trestle/oidc/connect/token
TRESTLE_ODATA_URL=https://api.cotality.com/trestle/odata/Property

# =============================================================================
# SUPABASE / POSTGRESQL
# =============================================================================
DATABASE_URL=postgresql://postgres:your_password@your_host:5432/postgres

# =============================================================================
# ETL CONFIGURATION
# =============================================================================
# Start date for historical data pull (YYYY-MM-DD)
ETL_START_DATE=2013-01-01

# End date (defaults to today if not set)
# ETL_END_DATE=2025-11-30

# Batch size for API requests (max 1000 per Trestle)
ETL_BATCH_SIZE=500

# Rate limiting - requests per minute
ETL_RATE_LIMIT=30

# State to filter (default NV for Nevada)
ETL_STATE=NV

# Resume from checkpoint if interrupted
ETL_RESUME=true
